{
  "manifest_version": 3,
  "name": "AI Snip - Smart Screenshot Assistant",
  "version": "1.0.0",
  "description": "Capture screenshots and get instant AI-powered answers. Perfect for homework help and quick problem solving.",
  
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Snip"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
