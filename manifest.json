{
  "manifest_version": 3,
  "name": "SnipFlow - Smart Screenshot Assistant",
  "version": "1.0.0",
  "description": "Capture screenshots and get instant AI-powered answers. Perfect for homework help and quick problem solving.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "scripting",
    "contextMenus"
  ],
  

  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SnipFlow"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "commands": {
    "copy-locked-container": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy locked container to clipboard"
    },
    "copy-full-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Copy full tab screenshot to clipboard"
    }
  }
}
